<!-- このページは自分だけで編集 -->

<div class="forgetPasswordPage">
  <div class="container">
    <header class="header">
      <div>パスワード再設定</<div>
    </header>
    <!-- 以下フォーム -->

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email", placeholder: "eメールを入力してください" %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "パスワードを再設定する", class:"btn submitBtn" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
