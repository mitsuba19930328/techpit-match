<div class="userEditPage">
  <div class="header">アカウント編集</div>
  <div class="container">
    <%= form_for current_user, url:registration_path(current_user) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label "名前" %><br/>
        <%= f.text_field :name, class: "form-control", autocomplete: "name" %>
      </div>

      <div class="form-group">
        <%= f.label "自己紹介" %><br/>
        <%= f.text_field :self_introduction, class: "form-control", autocomplete: "self_introduction" %>
      </div>

      <div class="form-group">
        性別:<br/>
        <%= f.radio_button :sex, :男 %>
        <%= f.label "男" %><br/>
        <%= f.radio_button :sex, :女 %>
        <%= f.label "女" %><br/>
      </div>

      <div class="form-group">
        画像:
        <%= f.file_field :img_name %>
      </div>

      <div class="form-group">
        <%= f.label "更新するにはパスワードを入力してください" %><br/>
        <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
      </div>

      <div class="text-center">
        <%= f.submit "更新", class: "btn submitBtn" %>
      </div>
    <% end %>

    <!-- 戻るボタンは未実装（現在フレームだけあり） -->
    <div class="back-container">
      <div class="btn backBtn">
        <%= link_to "戻る", user_registration_path(resource_name) %>
      </div>
    </div>
  </div>
</div>
